@model Amazon.Models.Book
@{
    Layout = null;
    ViewData["Title"] = "RegBookForm";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegBookForm</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/vendor/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>REGISTRAR UN LIBRO</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RegBookForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="ISBN">ISBN:</label>
                    <input class="form-control" asp-for="ISBN" />
                </div>
                <div class="form-group">
                    <label asp-for="Title">Title:</label>
                    <input class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label asp-for="Author">Author:</label>
                    <input class="form-control" asp-for="Author" />
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price:</label>
                    <input class="form-control" asp-for="Price" />
                </div>
                <div class="form-group">
                    <label asp-for="NroPages">NroPages:</label>
                    <input class="form-control" asp-for="NroPages" />
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Submit RegBook</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

